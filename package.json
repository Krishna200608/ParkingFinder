{
  "name": "parkingfinder-root",
  "version": "1.0.0",
  "description": "Root for ParkingFinder MERN project",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",

    // run both servers together
    "dev": "concurrently \"npm run server\" \"npm run client\"",

    // backend: run backend's actual dev script
    "server": "npm run dev --prefix backend",

    // frontend: Vite uses `npm run dev` not `npm start`
    "client": "npm run dev --prefix frontend"
  },
  "keywords": [],
  "author": "Krishna",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
